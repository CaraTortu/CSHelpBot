{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2022"],
    "target": "es2022",
    "module": "esnext",
    "removeComments": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
  },
  "exclude": ["node_modules/"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
    }
}
